{
  "type": "module",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "prepare": "node .husky/install.mjs",
    "changeset": "changeset",
    "changeset:release": "npm run build && changeset publish",
    "version": "changeset version && node scripts/postversion.mjs",
    "build": "npm --prefix libs/moqtail-ts run build",
    "test": "npm --prefix libs/moqtail-ts run test -- run",
    "format": "npm --prefix libs/moqtail-ts run format"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "glob": "^13.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prompts": "^2.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "npm@11.9.0"
}
